  "bugs": {
    "url": "https://github.com/kcharles52/let-us-chat/issues"
  },
  "homepage": "https://github.com/kcharles52/let-us-chat#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "morgan": "^1.10.0",
    "opentok": "^2.10.0"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.3"
  },
  "nodemonConfig": {
    "ignore": [
      "client/*"
    ],
    "delay": "3"
